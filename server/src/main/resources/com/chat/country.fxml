<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.chat.controllers.CountryController"
            stylesheets="@../../styles/country.css">
   <children>
      <BorderPane AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
                  AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <top>
            <VBox alignment="CENTER" prefHeight="102.0" prefWidth="600.0">
               <children>
                  <Label alignment="CENTER" text="User Distribution by Country" styleClass="header-label"/>
               </children>
            </VBox>
         </top>
         <center>
            <PieChart fx:id="pieChart" BorderPane.alignment="CENTER"/>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
